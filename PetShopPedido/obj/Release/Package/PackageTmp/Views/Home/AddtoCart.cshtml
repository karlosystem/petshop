@model PetShopPedido.Models.tblProducts


<div class="container mt-4">

    @using (Html.BeginForm())
    {


        <div class="row">
            <div class="col-lg-6">
                <input type="hidden" name="id" value="@Model.ProID" />
                <img src="~/Uploads/@Model.Image" class="img-fluid" />
            </div>

            <div class="col-lg-6">
                <h3>@Model.Name</h3>

                <p>@Model.Description</p>
                <p>S/. <strong>@Model.Unit</strong></p>
                <input type="number" min="1" max="10" value="1" onkeypress="return isNumber(event)" name="qty" id="qty" />
                <input type="submit" id="send" value="Agregar a Carrito" class="btn btn-warning" />
                @*<button type="submit" class="button button-dark" name="send" id="send">Send message</button>*@
            </div>

        </div>

    }
</div>

