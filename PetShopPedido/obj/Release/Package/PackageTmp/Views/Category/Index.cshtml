@model IEnumerable<PetShopPedido.Models.tblCategories>
@{
    ViewBag.Title = "Index";
}
<script src="~/js/jquery.min.js"></script>

<script>
$(document).ready(function(){
    $("#searchBox").on("keyup", function () {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>

<div class="container mt-5 mb-5">
    <h2>Listado de Categorias</h2>
    <div class="form-group">
        <input type="text" class="form-control col-lg-4 ml-auto" placeholder="Buscar por.." id="searchBox" />
    </div>
    <br>
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CatId</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="@Url.Action("Edit", "Category", new { id = item.CatId})" class="btn btn-info">Editar</a>
                        <a href="@Url.Action("Delete", "Category", new { id = item.CatId})" class="btn btn-danger">Eliminar</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>


</div>


