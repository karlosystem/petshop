@model PetShopPedido.Models.tblUser

@using (Html.BeginForm())
{
    <div class="container mt-5 mb-5">

        <div class="row">
            <div class="col-lg-4 mx-auto ">
                <h2>Control de Acceso</h2>
                <form class="bg-white p-5 contact-form">
                    <div class="form-group">
                        <span>Email:</span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <span>Password:</span>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Acceso" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
                <h3 style="color:red;">@TempData["msg"]</h3>


            </div>
        </div>
    </div>

}
