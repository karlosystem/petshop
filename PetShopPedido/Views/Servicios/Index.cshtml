@model IEnumerable<PetShopPedido.Models.tblServicio>

@{
    ViewBag.Title = "Index";
}

<script src="~/js/jquery.min.js"></script>

<script>
$(document).ready(function(){
    $("#searchBox").on("keyup", function () {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>

<div class="container-fluid mt-5 mb-5">
    <h2>Listado de Servicios</h2>
    <div class="form-group">
        <input type="text" class="form-control col-lg-4 ml-auto" placeholder="Buscar por.." id="searchBox" />
    </div>
    <br>

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.idServ)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nomServ)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.precServ)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.desServ)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.horarioServ)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fecServ)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.enabled)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.createDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.idUser)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody id="myTable">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.idServ)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nomServ)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.precServ)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.desServ)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.horarioServ)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fecServ)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.enabled)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.createDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.idUser)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Servicios", new { id = item.idServ})" class="btn btn-info">Editar</a>
                        <a href="@Url.Action("Delete", "Servicios", new { id = item.idServ})" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
    </tbody>
</table>


</div>