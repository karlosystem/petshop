@model PetShopPedido.Models.tblTracking

@{
    ViewBag.Title = "Create";
}

<div class="container mt-5 mb-5">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4> Crear Tracking</h4>

        <div class="alert alert-success" role="alert">
            @ViewBag.Message
        </div>


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Encargado</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Pedido Nro.</label>
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.InvoiceId, new { htmlAttributes = new { @class = "form-control" } })*@

                @Html.DropDownListFor(m => m.InvoiceId, ViewBag.PedList as SelectList, "-- Selecciona Pedido ---", new { @class = "form-control" })
                
                @Html.ValidationMessageFor(model => model.InvoiceId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Estado</label>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.IdEstado, ViewBag.EstList as SelectList, "-- Selecciona Estado ---", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdEstado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.observacion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.observacion, 10, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
                @Html.ValidationMessageFor(model => model.observacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Grabar" class="btn btn-info" />
            </div>
        </div>


    </div>
    }
    <div class="row">
        <div class="col-md-4 mx-auto offset-8">
            <button class="btn btn-danger" onclick="window.history.go(-2)">Regresar</button>
        </div>
    </div>

</div>

